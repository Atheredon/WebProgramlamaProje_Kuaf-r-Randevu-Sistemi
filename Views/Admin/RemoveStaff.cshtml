@model IEnumerable<KuaförRandevuSistemi.Models.Staff>

<h1>Remove Staff</h1>
<form method="post" action="/Admin/RemoveStaff">
    <div class="form-group">
        <label for="StaffId">Select a staff member to remove:</label>
        <select name="StaffId" id="StaffId" class="form-control" required>
            @foreach (var staff in Model)
            {
                <option value="@staff.Id">@staff.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-danger">Remove</button>
</form>
